 try (PDDocument doc = PDDocument.load(new File("input.pdf"))) {

    PDAcroForm acroForm = doc.getDocumentCatalog().getAcroForm();
    doc.getDocumentCatalog().setAcroForm(acroForm);

    PDTextField textField = (PDTextField) acroForm.getField("Account Number 1");
    textField.setDefaultValue("Enter account number");
    textField.setDefaultAppearance("/Helv 12 Tf 0.7 g");

    // JavaScript to change the border color based on the field value
    String javaScript = 
        "var fieldValue = this.getField('Account Number 1').value;" +
        "if (fieldValue.trim().length === 0) {" +
        "    this.getField('Account Number 1').borderColor = color.red;" +
        "} else {" +
        "    this.getField('Account Number 1').borderColor = color.black;" +
        "}";

    // Set JavaScript action on field blur event
    PDFormFieldAdditionalActions additionalActions = new PDFormFieldAdditionalActions();
    PDActionJavaScript onBlurAction = new PDActionJavaScript(javaScript);
    additionalActions.setC(onBlurAction); // Set JavaScript on 'C' (On Blurred) event

    textField.setActions(additionalActions);

    doc.save(new File("output.pdf"));
} catch (IOException e) {
    e.printStackTrace();
}
