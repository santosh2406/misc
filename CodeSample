try (PDDocument doc = PDDocument.load(new File("input.pdf"))) {
    PDAcroForm acroForm = doc.getDocumentCatalog().getAcroForm();

    PDTextField textField = (PDTextField) acroForm.getField("Account Number 1");
    textField.setDefaultValue("Enter account number");
    
    // Add validation for the text field
    String javaScript = "var fieldValue = this.getField('Account Number 1').value;" +
                        "if (fieldValue.length < 10) {" +
                        "app.alert({cMsg: 'Account number should be at least 10 characters long.', cTitle: 'Validation Error'});" +
                        "}";
    textField.setAdditionalAction(COSName.getPDFName("K"), PDActionFactory.createJavaScript(javaScript));

    // Update default appearance to set the placeholder text
    textField.setDefaultAppearance("/Helv 12 Tf 0.7 g");
    // Adjust the color and font size as needed

    doc.save(new File("output.pdf"));
} catch (IOException e) {
    e.printStackTrace();
}
