try (PDDocument document = PDDocument.load(new File("input.pdf"))) {
    PDAcroForm acroForm = document.getDocumentCatalog().getAcroForm();

    // Assuming the field name is "Account Number 1"
    PDTextField textField = (PDTextField) acroForm.getField("Account Number 1");
    textField.setDefaultValue("Enter account number");
    textField.setAdditionalActions(COSName.V, getJavaScriptValidation());

    document.save("output.pdf");
} catch (IOException e) {
    e.printStackTrace();
}

private COSDictionary getJavaScriptValidation() {
    COSDictionary dictionary = new COSDictionary();
    COSDictionary javascript = new COSDictionary();

    // JavaScript to validate the text field
    String jsScript = "var fieldValue = this.getField('Account Number 1').value; "
                    + "if (fieldValue.trim().length === 0) { "
                    + "app.alert('Please enter a value for Account Number.'); "
                    + "}";

    COSString js = new COSString(jsScript.getBytes(StandardCharsets.ISO_8859_1));
    javascript.setItem(COSName.JS, js);
    dictionary.setItem(COSName.JS, javascript);

    return dictionary;
}
